    "FeedbackControlPolicySettings": {
      "type": "object",
      "description": "Settings related to feedback control policies.",
      "properties": {
        "connectedExperiences": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "Allow Microsoft feedback data from users in the tenant to be used in connected experiences, such as AI analysis on feedback."
        },
        "policyAllowFeedback": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "Allow users to submit feedback to Microsoft."
        },
        "policyAllowSurvey": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "Allow Microsoft to issue survey prompts to users."
        },
        "policyAllowScreenshot": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "Allow users to include screenshots, screen recordings, and attachments when submitting feedback to Microsoft."
        },
        "policyAllowContact": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "Allow Microsoft to follow up with users on submitted feedback."
        },
        "policyAllowContent": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "Allow users to include additional log files and content samples with submitted feedback."
        },
        "policyEmailCollectionDefault": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "A value indicating whether email collection is selected by default when the user launches feedback experiences. This setting is only applicable when policyAllowContact is not set to Disabled."
        },
        "policyScreenshotDefault": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "A value indicating whether the screenshot checkbox is selected by default when the user launches feedback experiences. This setting is only applicable when policyAllowScreenshot is not set to Disabled."
        },
        "policyContentSamplesDefault": {
          "$ref": "#/definitions/FeedbackControlPolicyState",
          "description": "A value indicating whether the content samples checkbox is selected by default when the user launches feedback experiences. This setting is not applicable when policyAllowContent is set to Disabled."
        }
      }
    },
    "FeedbackControlPolicyState": {
      "type": "string",
      "description": "Available values for a Feedback Control Policy state.",
      "enum": [
        "NotConfigured",
        "Enabled",
        "Disabled"
      ],
      "x-ms-enum": {
        "name": "FeedbackControlPolicyState",
        "modelAsString": true,
        "values": [
          {
            "name": "NotConfigured",
            "value": "NotConfigured",
            "description": "Enabled state is not explicitly specified. This is the default state."
          },
          {
            "name": "Enabled",
            "value": "Enabled",
            "description": "Control Policy has been explicitly enabled by an admin."
          },
          {
            "name": "Disabled",
            "value": "Disabled",
            "description": "Control Policy has been explicitly disabled by an admin."
          }
        ]
      }
    },
    "MfaEnforcement": {
