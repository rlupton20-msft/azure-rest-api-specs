          },
          {
            "name": "OptOut",
            "value": "OptOut",
            "description": "This tenant is opted out of Multi-factor authentication enforcement."
          },
          {
            "name": "Enforce",
            "value": "Enforce",
            "description": "Multi-factor authentication is required."
          }
        ]
      }
    },
